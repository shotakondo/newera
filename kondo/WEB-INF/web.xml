<web-app>
	
	<welcome-file-list>
		<welcome-file>/WEB-INF/jsp/toppage.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>FrontServlet</servlet-name>
		<servlet-class>exe.FrontServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/img/*</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>toppagefilter</filter-name>
		<filter-class>filter.TopPageFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>toppagefilter</filter-name>
		<url-pattern>/</url-pattern>
	</filter-mapping>
	
</web-app>